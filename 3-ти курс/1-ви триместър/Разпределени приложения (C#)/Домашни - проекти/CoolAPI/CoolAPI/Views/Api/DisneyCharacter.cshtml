@{
    ViewBag.Title = "Disney Character Lookup";
}

<h2>Disney Character Lookup</h2>

<form asp-action="DisneyCharacter" method="get">
    <p>
        <label for="characterId">Въведи ID на гороя:</label>
        <input type="number" id="characterId" name="characterId" required />
    </p>
    <input type="submit" value="Търси" />
</form>

@if (ViewData["result"] != null)
{
    //<p>@ViewData["result"]</p>

    @if (ViewData["CharacterName"] != null && ViewData["CharacterImage"] != null)
    {
        <h3>Име на героя: @ViewData["CharacterName"]</h3>
        <p>Филми в които участва: @ViewData["CharacterFilms"]</p>
        <p>Телевизионни анимаций в които участва: @ViewData["CharacterTV"]</p>
        <p>Игри в които участва: @ViewData["CharacterGames"]</p>
        <img src="@ViewData["CharacterImage"]" alt="@ViewData["CharacterName"]" style="max-width: 300px;" />
    }
}
