@{
    ViewBag.Title = "QR Code Generator";
}

<h2>QR Code Generator</h2>

<form asp-action="QrCode" method="post">
    <p>
        <label for="url">Enter URL:</label>
        <input type="text" id="url" name="url" required />
        <input type="submit" value="Генерирай QR код" />
    </p>
</form>

@if (ViewData["QrCodeImage"] != null)
{
    <h3>Generated QR Code:</h3>
    <img src="@ViewData["QrCodeImage"]" alt="Генерирай QR код" />
}
else
{
    <p>Моля въведи URL за да генерираме QR код.</p>
}
